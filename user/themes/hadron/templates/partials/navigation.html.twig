{% macro nav_loop(page, hide_home_menu_link, home_alias) %}
	{% import _self as macros %}
	{% for p in page.children.visible %}
		{% set active_page = (p.active or p.activeChild) ? 'active' : '' %}
		{% if theme_var('dropdown.enabled') and p.children.visible.count > 0 %}
			<li>
				<a href="{{ p.url }}" class="{{ active_page }}">
					{% if p.header.icon %}
						<i class="fa fa-{{ p.header.icon }}"></i>
					{% endif %}
					{{ p.menu }}
				</a>
				<ul>
					{{ macros.nav_loop(p) }}
				</ul>
			</li>
		{% else %}
			<li>
				<a href="{{ p.url }}" class="{{ active_page }}">
					{% if p.header.icon %}
						<i class="fa fa-{{ p.header.icon }}"></i>
					{% endif %}
					{{ p.menu }}
				</a>
			</li>
		{% endif %}
	{% endfor %}
{% endmacro %}

<ul {{ tree ? 'class="tree"' : '' }}>
	{% import _self as macros %}
	{{ macros.nav_loop(pages, hide_home_menu_link, home_alias ) }}

    {% block menu_items %}
		{% if theme_var('custommenus.enabled') %}
			{% for mitem in theme_var('menu') %}
				<li>
					<a href="{{ mitem.url }}" target="{{ mitem.target }}">
						{% if mitem.icon %}
							<i class="fa fa-{{ mitem.icon }}"></i>
						{% endif %}
						{{ mitem.text }}
					</a>
				</li>
			{% endfor %}
		{% endif %}
    {% endblock menu_items %}

    {% block snipcart_cart %}
		{% include 'partials/snipcart_navigation.html.twig' ignore missing %}
    {% endblock snipcart_cart %}
</ul>
