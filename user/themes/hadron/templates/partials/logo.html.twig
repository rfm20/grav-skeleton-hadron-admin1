{% set logo = theme_var(mobile ? 'custom_logo_mobile' : 'custom_logo') %}
{% set title = config.site.slug ?  config.site.slug : config.site.title %}
{% set invert = config.theme.invert_logo ? 'inverted' : '' %}

<a href="{{ home_url }}" class="f a navbar-brand mr-10 {{ invert }}">
	{% if logo %}
		{% set logo_file = (logo|first).name %}
		<img src="{{ url('theme://images/logo/' ~ logo_file) }}" alt="{{ site.title }}" />
		{% if not config.theme.hide_title %}
			<span class="title">{{ title }}</span>
		{% endif %}
	{% else %}
		{% include('@images/grav-logo.svg') %}
	{% endif %}
</a>
